                <th>操作</th>
            </tr>
            <c:forEach items = "${queryInfoStateList }" var = "info">
            <%
            	if(info_cnt % 2 == 1) bg_class="class='one-bg'";
            	else bg_class="two-bg";
            %>
	            <tr <%=bg_class %>>
	                <td <%=bg_class %>><%=info_cnt++ %></td>
	                <td <%=bg_class %>>${info.getInfo_id() }</td>
	                <td <%=bg_class %>>${info.getInfo_title() }</td>
	                <td <%=bg_class %>>${info.getInfo_date() }</td>
	                <td <%=bg_class %>><c:if test="${info.getInfo_pay_state()==1}">是</c:if><c:if test="${info.getInfo_pay_state()==0 }">否</c:if></td>
	                <td <%=bg_class %>><c:if test="${info.getInfo_check_state()==1}">是</c:if><c:if test="${info.getInfo_check_state()==0 }">否</c:if></td>
	                <td <%=bg_class %>>
	                    <span>√审核</span><span>×删除</span>
	                </td>
	            </tr>
            </c:forEach>
            <tr>
                <a href=<%=infoPreUrl %> target="content_body">上一页</a>|<a href=<%=infoNextUrl %> target="content_body">下一页</a>
            </tr>
        </table>
